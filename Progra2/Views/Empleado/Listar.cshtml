@model List<EmpleadoModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<h1>Lista Empleados</h1>
<div class="card">
    <div class="card-body">
        <table class="table table-bordered" bgcolor="white" width="700">
            <thead>
                <tr bgcolor="grey">
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Salario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) // c# en html
                {// se crea una nueva fila
                    <tr>
                        <!-- Se inserta los datos del modelo-->
                        <td>@item.Nombre</td>
                    </tr>
                }

            </tbody>
        </table>
        <a asp-action="Insertar" asp-controller="Empleado" class="btn btn-success">Insertar</a>
    </div>
    <!-- Modal de inserci칩n exitosa -->
    <div class="modal fade" id="insertionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Inserci칩n Exitosa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Se insert칩 al empleado de manera exitosa.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Mostrar el modal si TempData["ShowModal"] est치 en true
        var showModal = '@(TempData["ShowModal"] ?? false)';
        if (showModal.toLowerCase() === 'true') {
            $('#insertionModal').modal('show');
        }
    });
</script>

