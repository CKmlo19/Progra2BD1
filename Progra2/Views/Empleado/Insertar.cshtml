@model EmpleadoModel
@{
    ViewData["Title"] = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="card">
    <div class="card-header">
        Insertar Empleado
    </div>
    <div class="card-body">

        <form asp-action="Insertar" asp-controller="Empleado" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Valor Documento Identidad</label>
                <input asp-for="ValorDocumentoIdentidad" class="form-control">
                <span asp-validation-for="ValorDocumentoIdentidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Puesto</label>
                <select id="idPuesto" name="idPuesto" class="form-control">
                    @foreach (var puesto in Model.Puestos)
                    {
                        <option value="@puesto.Id">@puesto.Nombre</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-abrir-modal">Insertar</button>
            <a asp-action="Listar" asp-controller="Empleado" class="btn btn-warning">Regresar</a>
        </form>
    </div>
    <!-- Modal de error -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Error</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Hubo un error al insertar el empleado.
                    Ya existe un empleado con el mismo nombre
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        // mostrar el modal si ViewBag.ShowErrorModal esta en true
        var showModal = '@(ViewBag.ShowErrorModal ?? false)';
        if (showModal.toLowerCase() === 'true') {
            $('#errorModal').modal('show');
        }
    });
</script>
